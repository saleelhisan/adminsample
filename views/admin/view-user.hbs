<section>
    <div class="container">
        <div class="row mt-3">
            <a href="/admin/add-user" class="btn btn-success ml-auto">Add user</a>
        </div>
        <table class="table table-striped mt-3" id="viewusers">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Edit User</th>
      <th scope="col">Delete User</th>
      

    </tr>
  </thead>
  <tbody>
    {{#each allUsers}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this._id}}</td>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
      <td><a href="/admin/edit-user/{{this.email}}" class="btn btn-outline-primary">Edit</a></td>
      <td><a href="/admin/delete-user/{{this.email}}" class="btn btn-outline-danger" onclick="return confirm('deleting {{this.name}}')">Delete</a></td>
    </tr>
    {{/each}}
    </tbody>
</table>
    </div>
</section>
